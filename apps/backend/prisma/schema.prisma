generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Mood {
  LOW
  NORMAL
  HIGH
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id       String  @id @default(uuid())
  name     String
  username String  @unique
  email    String  @unique
  password String?
  role     Role    @default(USER)

  tasks        Task[]
  dailyStatus  DailyTaskStatus[]
  dailySummary DailySummary[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id       String   @id @default(uuid())
  userId   String
  title    String
  isActive Boolean  @default(true)
  priority Priority @default(MEDIUM)

  startDate DateTime
  endDate   DateTime?

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  dailyStatus DailyTaskStatus[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model DailyTaskStatus {
  id           String    @id @default(uuid())
  userId       String
  taskId       String
  date         DateTime
  isCompleted  Boolean   @default(false)
  taskTitle    String?
  taskPriority Priority?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([taskId, date])
  @@index([userId, date])
}

model DailySummary {
  id     String   @id @default(uuid())
  userId String
  date   DateTime

  completedTasks Int
  totalTasks     Int
  points         Int
  consistency    Float
  focus          String?
  mood           Mood?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId, date])
}
